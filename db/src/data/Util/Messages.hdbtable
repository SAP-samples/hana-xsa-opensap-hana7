COLUMN TABLE "Util.Messages" (
     "MESSAGECLASS" NVARCHAR(20) NOT NULL COMMENT 'Message Class',
	 "MESSAGENUMBER" NVARCHAR(3) NOT NULL COMMENT 'Message Number',
	 "LANGUAGE" NVARCHAR(2) NOT NULL COMMENT 'Language',
	 "DESCRIPTION" NVARCHAR(255) COMMENT 'Description',
	 "TEXT" NCLOB MEMORY THRESHOLD 1000 COMMENT 'Long Text',
	 PRIMARY KEY ("MESSAGECLASS", "MESSAGENUMBER", "LANGUAGE")) 
	 COMMENT 'Message - like ABAP T100 table'
	 UNLOAD PRIORITY 5 AUTO MERGE 
